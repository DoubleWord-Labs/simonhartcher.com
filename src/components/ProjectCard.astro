---
export interface Props {
  title: string;
  status: 'in-progress' | 'prototype' | 'released' | 'abandoned' | 'maintained';
  tags?: string[];
  github?: string;
  steam?: string;
  website?: string;
  websiteIcon?: 'globe' | 'itch' | 'docs';
}

const { title, status, tags = [], github, steam, website, websiteIcon = 'globe' } = Astro.props;

const statusLabels: Record<Props['status'], string> = {
  'in-progress': 'In Progress',
  'prototype': 'Prototype',
  'released': 'Released',
  'abandoned': 'Abandoned',
  'maintained': 'Maintained',
};

const hasLinks = github || steam || website;
---

<div class={`project-card status-${status}`}>
  <div class="project-header">
    <strong class="project-title">{title}</strong>
    <div class="project-badges">
      <span class="status-pill">{statusLabels[status]}</span>
      {tags.map(tag => <span class="tag-pill">{tag}</span>)}
    </div>
  </div>
  <div class="project-content">
    <slot />
  </div>
  {hasLinks && (
    <div class="project-links">
      {github && (
        <a href={github} target="_blank" rel="noopener noreferrer" aria-label="View on GitHub" class="project-link">
